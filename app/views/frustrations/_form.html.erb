<div class="row">
  <div class="col-md-4">
    <%= form_for(@frustration) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, :required => true, placeholder: "Frustration Title", class: "form-control"  %>
    </div>

    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, :required => true, :placeholder=>'Frustration Text', class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.hidden_field(:cover_cache) %><br>
      <%= f.file_field(:cover) %>
      <p class="help-block">Upload a cover photo to your frustration</p>
    </div>

    <div>
      <%= f.submit class: "btn btn-primary btn-lg" %>
    </div>
    <% end %>
  </div>
</div>