<div class="container">
  <div class="row">
    <%= form_tag(sessions_path) do %>
      <div class="col-sm-6 col-md-4 col-md-offset-3">
        <h1 class="text-center">Sign in</h1><br>
        <div>
        <%=  image_tag('noavatar.png', width: 100, class: "center-block", alt:"") %><br>
          <div class="form-group">
            <%= label_tag :email %>
            <%= text_field_tag :email, nil, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= label_tag :password %>
            <%= password_field_tag :password, nil, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= submit_tag "Sign In", class: "btn btn-primary btn-lg btn-block" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>